{
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSaveTimeout": 5000,
  "editor.codeActionsOnSaveTimeout": 5000,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "source.fixAll.markdownlint": "always"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.validate": ["typescript"],
  "markdownlint.run": "onSave",
  "markdownlint.config": {},
  "files.exclude": {
    "dist": true,
    "node_modules": true,
    "coverage": true,
    "*.vsix": true
  },
  "terminal.integrated.profiles.osx": {
    "zsh-nvm": {
      "path": "/bin/zsh",
      "args": ["-l", "-c", "source .vscode/nvm-auto.sh; exec zsh"]
    }
  },
  "terminal.integrated.defaultProfile.osx": "zsh-nvm",
  "workbench.colorCustomizations": {
    "activityBar.background": "#1C2F43",
    "editor.lineHighlightBackground": "#1073cf2d",
    "editor.lineHighlightBorder": "#9fced11f",
    "titleBar.activeBackground": "#28425E",
    "titleBar.activeForeground": "#F8FAFC",
    "titleBar.inactiveBackground": "#1C2F43",
    "titleBar.inactiveForeground": "#F8FAFC",
    "statusBar.background": "#1C2F43",
    "statusBar.foreground": "#F8FAFC",
    "statusBar.debuggingBackground": "#1C2F43",
    "statusBar.debuggingForeground": "#F8FAFC",
    "statusBar.noFolderBackground": "#1C2F43",
    "statusBar.noFolderForeground": "#F8FAFC"
  }
}
